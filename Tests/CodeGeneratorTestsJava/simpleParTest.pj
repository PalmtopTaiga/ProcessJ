proc void reader(chan<int>.read cr)[yield=true] {
	int x = cr.read();
}

proc void writer(chan<int>.write cw)[yield=true] {
	cw.write(10);
}

proc void foo()[yield=true] {
	chan<int> c;
	int x, y;	

	par {
		reader(c.read);	
		writer(c.write);
		x = x + 10;
		y = y + 10;
	}
}

proc void main(string[] args)[yield=true] {
	foo();
}